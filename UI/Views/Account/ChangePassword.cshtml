@model ChangePassworViewModel

<div class="d-flex align-items-center justify-content-center">

    <div class="col-md-4 col-xl-3 mt-5 text-white">

        <partial name="_AlertsPartial" />

        <form method="post" asp-action="ChangePassword" autocomplete="off">
            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input type="password" class="form-control text-white" asp-for="Password" autocomplete="new-password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="NewPassword"></label>
                <input type="password" class="form-control text-white" asp-for="NewPassword" autocomplete="off" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmNewPassword"></label>
                <input type="password" class="form-control text-white" asp-for="ConfirmNewPassword" autocomplete="off" />
                <span asp-validation-for="ConfirmNewPassword"></span>
            </div>

            <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-sm btn-success">Change password</button>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}