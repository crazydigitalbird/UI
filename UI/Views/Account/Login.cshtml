@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/MDB5-STANDARD-UI-KIT-Free-6.0.1/css/mdb.min.css" />
</head>
<body>

    <div class="container">
        <div class="d-flex align-items-center justify-content-center">

            <div class="col-md-4 mt-5">

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="alert alert-success">Logged in.</div>
                }
                else
                {
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                    <form method="post" asp-action="LogIn">

                        <div class="form-outline mb-4">
                            <input type="text" class="form-control" asp-for="UserName" />
                            <label class="form-label" asp-for="UserName"></label>
                            <span asp-validation-for="UserName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" class="form-control" asp-for="Password" />
                            <label class="form-label" asp-for="Password"></label>
                            <span asp-validation-for="Password"></span>
                        </div>

@*                        <div class="row mb-4">
                            <div class="col d-flex justify-content-left">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                    <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>
                        </div>*@

                        <button type="submit" class="btn btn-primary btn-block mb-4">SIGN IN</button>
                    </form>
                }

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/MDB5-STANDARD-UI-KIT-Free-6.0.1/js/mdb.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>