@model string

<div class="d-flex align-items-center justify-content-center">
    <div class="col-md-4 col-xl-3 mt-5">

        <partial name="_AlertsPartial" />

        <form method="post" asp-action="PasswordRecovery">
            <div class="form-outline mb-3">
                <input type="email" class="form-control" name="email" value="@Model" required />
                <label class="form-label" for="email">Email</label>
            </div>
            <a class="btn btn-sm btn-secondary" asp-controller="Account" asp-action="Login">Cancel</a>
            <button type="submit" class="btn btn-sm btn-success">Ok</button>
        </form>
    </div>
</div>

