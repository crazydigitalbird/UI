@using Core.Models.Users;
@model IEnumerable<UserAdmin>

@{
    ViewData["Title"] = "Admins";
}

<div class="container mt-5">
    <partial name="_AlertsPartial" />

    <table class="table table-sm table-dark table-hover">
        <thead>
            <tr>
                <th class="fw-bold">Login</th>
                <th class="fw-bold text-center">Action</th>
            </tr>
            <tr>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                foreach (var admin in Model.OrderBy(u=> u.User.Login))
                {
                    <tr>
                        <td>@(admin.User.Login ?? admin.User.Email)</td>
                        <td style="width: 80px;">
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Admin" asp-action="DeleteAdmin" asp-route-adminId="@admin.Id" asp-route-email="@(admin.User.Login ?? admin.User.Email)">Delete</a>
                        </td>
                    </tr>
                }
            }
            <tr class="tr-placeholder">
                <td colspan="2" class="text-center">No admins</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-outline-success" asp-controller="Admin" asp-action="AddAdmin">Add admin</a>
</div>
