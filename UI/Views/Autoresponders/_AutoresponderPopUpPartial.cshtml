<div class="pop-up autoresponder d-flex justify-content-center align-items-center d-none">
    <div class="pop-up-content d-flex bd-highlight flex-column bg-port_gore">

        <div class="d-flex align-items-center text-white pb-3">
            <div class="d-flex align-items-center">
                <div class="avatar position-relative">
                    <img id="avatarPopUp" src="" alt="" class="w-100 rounded">
                    <div id="statusPopUp" class="rounded-circle position-absolute bottom-0 end-0"></div>
                </div>
                <div class="ps-2 text-start">
                    <P id="namePopUp"></P>
                    <p id="idPopUp" class="text-white-50 small"></p>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <label class="fw-bold small ms-3 pe-2">Интервал отправления сообщений от</label>
                <input id="intervalStart" type="number" min="0" max="999" class="form-control form-control-sm form-control-number text-center text-white small" value="60" autocomplete="off" />
                <label class="fw-bold small px-2">до</label>
                <input id="intervalFinish" type="number" min="0" max="999" class="form-control form-control-sm form-control-number text-center text-white small" value="300" autocomplete="off" />
            </div>
            <div class="d-flex align-items-center">
                <label class="fw-bold small ms-3 pe-2">Лимит сообщений</label>
                <input id="limitMessage" type="number" min="1" max="999" class="form-control form-control-sm form-control-number text-center text-white small" value="1" autocomplete="off" />
            </div>
        </div>

        <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg" class="pop-up__close">
            <path d="M1 1L10 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M10 1L1 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>

        <div class="d-flex justify-content-between flex-column h-100">
            <div class="autoresponder-item p-1 d-flex bd-highlight flex-column h-100 w-100 position-relative rounded">
                <div class="flex-grow-1 p-2">
                    <textarea id="textAutoresponder" class="autoresponder__write h-100" maxlength="300" placeholder="Введите текст" oninput="changeCounter()"></textarea>
                </div>
                <div id="mailUploadedFile" class="uploaded-file d-flex overflow-x-auto overflow-y-hidden"></div>
                <div class="d-flex align-items-center justify-content-end text-small p-1">
                    <span id="counter">0</span> <span class="mx-1">/</span> <span>300</span> <span class="ms-1">символов</span>
                </div>
            </div>
            <div class="d-flex pt-3">
                <div class="col-6 text-start">
                    <button id="close" type="button" class="btn answer-button attach-button rounded text-white" onclick="closeAutoresponderPopUp()">
                        Закрыть
                    </button>
                </div>
                <div class="col-6 text-end">
                    <button id="save" type="button" class="btn answer-button chat-button rounded text-white" onclick="save()">
                        Сохранить
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
