<div id="createGift" class="pop-up gift d-flex justify-content-center align-items-center d-none">
    <div class="pop-up-content p-3 w-50 bg-port_gore">
        <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg" class="pop-up__close">
            <path d="M1 1L10 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M10 1L1 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
        <div class="d-flex flex-column bd-highlight">
            <div class="d-flex justify-content-center align-items-center">
                <img class="giftUrl" style="width: 100px;" />
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <p class="giftName text-white ms-1"></p>
            </div>
            <div class="d-flex">
                <textarea rows="3" maxlength="200" class="my-3" placeholder="Сообщение"></textarea>
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn answer-button chat-button rounded text-white" onclick="sendGift()">
                    <img src="~/image/layout/Paper Plane.svg" alt="">
                    <span class="answer-button__text fw-bold">Отправить в чат</span>
                </button>
            </div>
        </div>
    </div>
</div>