<div class="pop-up chatAndMail d-none">
    <div class="pop-up-content d-flex bd-highlight flex-column bg-port_gore">
        <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg" class="pop-up__close">
            <path d="M1 1L10 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M10 1L1 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
        <div class="d-flex justify-content-between flex-wrap h-100">
            <div class="chatAndMail-item p-1 d-flex bd-highlight flex-column h-100" style="align-items: flex-start;">
                <div class="chatAndMail-item-head d-flex align-items-center justify-content-between w-100">
                    <div class="d-flex align-items-center justify-content-center w-100">
                        <p class="chatAndMail-item__title">История переписки</p>
                    </div>
                </div>
                <div id="historyMail" class="flex-grow-1 overflow-y-auto w-100"></div>
            </div>
            <div class="chatAndMail-item p-1 d-flex bd-highlight flex-column">
                <div class="chatAndMail-item-head d-flex align-items-center justify-content-between ps-2">
                    <div class="d-flex align-items-center">
                        <!-- Emojis -->
                        <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg" class="textarea-icon" onclick="showHidenEmojisMail()">
                            <circle cx="13" cy="13" r="13" fill="#9483FD"></circle>
                            <path d="M10.8994 15.8008C11.4944 16.2418 12.2189 16.5008 12.9994 16.5008C13.7799 16.5008 14.5044 16.2418 15.0994 15.8008" stroke="#3C29AB" stroke-linecap="round"></path>
                            <path d="M15.7994 11.9504C15.7994 12.53 15.4858 13.0004 15.0994 13.0004C14.713 13.0004 14.3994 12.53 14.3994 11.9504C14.3994 11.3708 14.713 10.9004 15.0994 10.9004C15.4858 10.9004 15.7994 11.3708 15.7994 11.9504Z" fill="#3C29AB"></path>
                            <path d="M10.9002 13.0004C11.2868 13.0004 11.6002 12.5303 11.6002 11.9504C11.6002 11.3705 11.2868 10.9004 10.9002 10.9004C10.5136 10.9004 10.2002 11.3705 10.2002 11.9504C10.2002 12.5303 10.5136 13.0004 10.9002 13.0004Z" fill="#3C29AB"></path>
                            <path d="M9.5 6.93661C10.5637 6.32124 11.7712 5.99811 13 6.00001C16.8661 6.00001 20 9.13391 20 13C20 16.8661 16.8661 20 13 20C9.1339 20 6 16.8661 6 13C6 11.7253 6.3409 10.529 6.9366 9.50001" stroke="#3C29AB" stroke-linecap="round"></path>
                        </svg>
                        <div class="position-relative">
                            <div id="emojisMail" class="position-absolute ms-1 d-none" style="right: 30px; top: -15px">
                            </div>
                        </div>

                        <p class="chatAndMail-item__title">Новое письмо</p>
                    </div>
                    <svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M16.85 15H3.15C1.83 15 0.75 13.93 0.75 12.6V3.4C0.75 2.08 1.82 1 3.15 1H16.85C18.17 1 19.25 2.07 19.25 3.4V12.6C19.25 13.93 18.18 15 16.85 15Z" stroke="#5A5A75" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M18.22 1.77002L11.35 8.59002C10.58 9.36002 9.41999 9.36002 8.63999 8.59002L1.76999 1.77002" stroke="#5A5A75" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M12.13 7.91998L18.22 13.83" stroke="#5A5A75" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M1.78 13.83L7.94 8" stroke="#5A5A75" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                </div>
                <div class="flex-grow-1 mb-2 mx-2">
                    <textarea id="newMailMessage" class="chatAndMail__write h-100" maxlength="3500" placeholder="Введите текст" oninput="changeMailCounter()"></textarea>
                </div>
                <div id="mailUploadedFile" class="uploaded-file d-flex overflow-x-auto overflow-y-hidden"></div>
                <div class="chatAndMail-item-footer d-flex align-items-center justify-content-end">
                    <span id="mailCounter">0</span> <span class="mx-1">/</span> <span>3500</span> <span class="ms-1">символов</span>
                </div>
                <div class="d-flex justify-content-center pb-1">
                    <button id="attachmentMail" type="button" class="btn answer-button attach-button rounded text-white me-2">
                        <img src="/image/layout/Attachment.svg" alt="">
                        <span class="answer-button__text fw-bold">Прикрепить файл</span>
                    </button>
                    <button id="sendMail" type="button" class="btn answer-button chat-button rounded text-white disabled" onclick="sendMail()">
                        <svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16.85 15H3.15C1.83 15 0.75 13.93 0.75 12.6V3.4C0.75 2.08 1.82 1 3.15 1H16.85C18.17 1 19.25 2.07 19.25 3.4V12.6C19.25 13.93 18.18 15 16.85 15Z" stroke="#FFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M18.22 1.77002L11.35 8.59002C10.58 9.36002 9.41999 9.36002 8.63999 8.59002L1.76999 1.77002" stroke="#FFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M12.13 7.91998L18.22 13.83" stroke="#FFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M1.78 13.83L7.94 8" stroke="#FFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        <span class="answer-button__text fw-bold">Отправить письмо</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
