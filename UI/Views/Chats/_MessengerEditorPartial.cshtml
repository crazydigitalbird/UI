<div class="large-block__body-footer mt-3 d-flex justify-content-around">
    <div class="textarea-block h-100">
        <div class="form-floating position-relative h-100">
            <textarea class="large-block__textarea rounded ps-5 pt-3 pb-3 text-white" placeholder="Type something..." id="floatingTextarea" maxlength="300" rows="5"></textarea>
            <p class="textarea-counter text-white position-absolute">
                <span>0</span>/300
            </p>

            <div class="textarea-icons-block d-flex flex-column position-absolute top-0 start-0 justify-content-between mt-3 ms-2">
                <img src="~/image/layout/Smile.svg" alt="Smile" class="textarea-icon rounded-circle">
                <img src="~/image/layout/Note.svg" alt="Smile" class="textarea-icon rounded-circle">
                <img src="~/image/layout/Present.svg" alt="Smile" class="textarea-icon rounded-circle">
                <img src="~/image/layout/Lightning.svg" alt="Smile" class="textarea-icon rounded-circle">
            </div>
        </div>
    </div>
    <div class="buttons-block">
        <div class="answer-button-group d-flex flex-column justify-content-between align-items-center" role="group" aria-label="Basic example">
            <div class="first-button-group">
                <button type="button" class="btn answer-button chat-button rounded text-white">
                    <img src="~/image/layout/Paper Plane.svg" alt="">
                    <span class="answer-button__text">Отправить в чат</span>
                </button>
                <button type="button" class="btn answer-button attach-button rounded text-white mt-2">
                    <img src="~/image/layout/Attachment.svg" alt="">
                    <span class="answer-button__text">Прикрепить файл</span>
                </button>
            </div>

            <button type="button" class="btn answer-button attach-button rounded text-white">
                <img src="~/image/layout/Envelope Closed.svg" alt="">
                <span class="answer-button__text answer-mail-text">Отправить письмо</span>
            </button>
        </div>
    </div>
</div>
