<div class="large-block__body-footer d-flex">
    <div class="textarea-block h-100 w-100">
        <div class="form-floating position-relative h-100">
            <textarea id="newMessage" class="large-block__textarea rounded ps-5 pt-3 pb-3 text-white" placeholder="Type something..." maxlength="300" rows="5" oninput="changeCounter()" onkeypress="sendEnter(event)"></textarea>
            <p class="textarea-counter text-white position-absolute">
                <span id="messageLength">0</span>/300
            </p>

            <div class="textarea-icons-block d-flex flex-column position-absolute top-0 start-0 justify-content-between mt-3 ms-2">
                
                <!-- Emojis -->
                <div>
                    <img id="btnEmojis" src="~/image/layout/Smile.svg" alt="Smile" class="textarea-icon rounded-circle" onclick="showHidenEmojis()">
                    <div class="position-relative">
                        <div id="emojis" class="position-absolute bottom-100 start-100 ms-1 d-none">
                        </div>
                    </div>
                </div>

                <!-- Stickers -->
                <div>
                    <img id="btnStickers" src="~/image/layout/Note.svg" alt="Smile" class="textarea-icon rounded-circle" onclick="showHidenStickers()">
                    <div class="position-relative">
                        <div id="stickers" class="position-absolute bottom-100 start-100 ms-1 rounded p-2 d-none" style="background-color: #131334;" data-load="false">  
                        </div>
                    </div>
                </div>

                <!-- Gifts -->
                <div>
                    <img id="btnGifts" src="~/image/layout/Present.svg" alt="Smile" class="textarea-icon-disabled rounded-circle" onclick="showHidenGifts()">
                    <div class="position-relative">
                        <div id="gifts" class="position-absolute bottom-100 start-100 ms-1 rounded p-2 d-none" style="background-color: #131334;" data-load="false">
                        </div>
                    </div>
                </div>

                <!-- Create Ecxlusive Post -->
                <div>
                    <img id="btnPost" src="~/image/layout/Lightning.svg" alt="Smile" class="textarea-icon-disabled rounded-circle" onclick="showHidenPost()">
                </div>
            </div>
        </div>
    </div>
    <div class="buttons-block col ps-3">
        <div class="answer-button-group d-flex flex-column justify-content-between align-items-center" role="group" aria-label="Basic example">
            <div class="first-button-group">
                <button type="button" class="btn answer-button chat-button rounded text-white" onclick="sendMessage()">
                    <img src="~/image/layout/Paper Plane.svg" alt="">
                    <span class="answer-button__text">Отправить в чат</span>
                </button>
                <button id="attachment" type="button" class="btn answer-button attach-button rounded text-white mt-2">
                    <img src="~/image/layout/Attachment.svg" alt="">
                    <span class="answer-button__text">Прикрепить файл</span>
                </button>
            </div>

            <button id="createMail" type="button" class="btn answer-button attach-button rounded text-white">
                <img src="~/image/layout/Envelope Closed.svg" alt="">
                <span class="answer-button__text answer-mail-text">Создать письмо</span>
            </button>
        </div>
    </div>
</div>
