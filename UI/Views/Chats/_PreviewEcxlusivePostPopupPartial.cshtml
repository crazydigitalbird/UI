<div class="pop-up preview d-none">
    <div class="pop-up-content">
        <span class="pop-up__close">
            <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 1L10 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M10 1L1 10" stroke="#9B9BAB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </span>
        <div class="preview-head d-flex align-items-center justify-content-between">
            <a href="#" class="avatar">
                <img src="" alt="" class="avatar__img">
                <div class="online"></div>
            </a>
            <p class="preview__title">Your posts for <span class="man__name"></span></p>
            <div class="d-flex align-items-end flex-column">
                <span class="date"></span>
                @*<button class="unseen_btn">Unseen</button>*@
            </div>
        </div>
        <div class="preview-body">
            <div class="d-flex flex-wrap preview-body-media" style="max-height: 65vh; overflow-y: auto;">
            </div>
            <p class="preview__text text-start"></p>
        </div>
    </div>
</div>