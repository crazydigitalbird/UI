@model int

<div class="modal fade" id="modalAddGroup" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-port_gore border-custom">
            <div class="modal-header p-2">
                <h5 class="modal-title text-white">Add Group</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAddGroup" asp-action="AddGroup" method="post" data-ajax="true" data-ajax-success="successAddGroup" data-ajax-failure="failureAddGroup" data-ajax-loading="#spinnerAddGroup" novalidate="novalidate">
                <div class="modal-body">
                    <input type="hidden" name="agencyId" value="@Model" />
                    <input id="nameGroup" name="nameGroup" type="text" class="form-control text-white" autocomplete="off" data-val="true" data-val-required="The New group name field is requird." placeholder="New group name" style="font-size: 1rem !important;" />
                    <span class="field-validation-valid" data-valmsg-for="nameGroup" data-valmsg-replace="true"></span>
                </div>
                <div class="modal-footer p-2">
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    <button id="btnSaveGroup" type="submit" class="btn btn-sm btn-outline-success">
                        <i class="fa-solid fa-save"></i>
                        Save
                        <span id="spinnerAddGroup" class="spinner-border spinner-border-sm" style="display: none;"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
