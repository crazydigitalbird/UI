@model List<SheetSite>

<div class="modal fade" id="modalAddSheet" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-port_gore border-custom">
            <div class="modal-header p-2">
                <h5 class="modal-title text-white">Add a new sheet</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAddSheet" asp-action="AddSheet" method="post" data-ajax="true" data-ajax-success="successAddSheet" data-ajax-failure="failureAddSheet" data-ajax-loading="#spinnerAddSheet">
                <div class="modal-body">

                    <div id="alertAddSheet" class="alert mb-3" role="alert">
                        <p></p>
                    </div>

                    <select id="siteId" name="siteId" class="form-control select-custom mb-3" required>
                        @foreach (SheetSite s in Model)
                        {
                            <option value="@s.Id">@s.Name</option>
                        }
                    </select>

                    <input type="text" id="login" name="login" class="form-control text-white mb-3" autocomplete="off" required placeholder="Login" style="font-size: 1rem !important;" />

                    <input type="password" id="password" name="password" class="form-control text-white" autocomplete="new-password" required placeholder="Passowrd" style="font-size: 1rem !important;" />
                </div>

                <div class="modal-footer p-2">
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-sm btn-outline-success">
                        <i class="fa-solid fa-plus mr-2"></i>
                        Add Sheet
                        <span id="spinnerAddSheet" class="spinner-border spinner-border-sm" style="display: none;"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>