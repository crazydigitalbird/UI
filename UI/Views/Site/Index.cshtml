@model List<SheetSite>

@{
    ViewData["Title"] = "Sites";
}

<div class="container mt-5">
    <partial name="_AlertsPartial" />

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th class="text-bold">Name</th>
                <th class="text-bold">Description</th>
                <th class="text-bold text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                foreach (var site in Model.OrderBy(s => s.Name))
                {
                    <tr>
                        <td>@site.Name</td>
                        <td>@site.Description</td>
                        <td style="width: 160px;">
                            <a class="btn btn-sm btn-primary" asp-controller="Site" asp-action="Edit" asp-route-siteId="@site.Id" >Edit</a>
                            <a class="btn btn-sm btn-danger" onclick="confirm(@site.Id, '@site.Name')">Delete</a>
                            @*<a class="btn btn-sm btn-danger" asp-controller="Site" asp-action="Delete" asp-route-siteId="@site.Id" asp-route-name="@site.Name">Delete</a>*@
                        </td>
                    </tr>
                }
            }
            <tr class="tr-placeholder">
                <td colspan="3" class="text-center">No sites</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" asp-controller="Site" asp-action="Add">Add site</a>
</div>

<partial name="_Confirm" />

@section Scripts{
    <script src="~/js/Site/site.js" asp-append-version="true"></script>
}